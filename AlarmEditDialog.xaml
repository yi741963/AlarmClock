<Window x:Class="AlarmClock.AlarmEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="編輯鬧鐘"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0"
                   Text="⏰ 鬧鐘設定"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#00D9FF"
                   Margin="0,0,0,20"/>

        <!-- 名稱 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="鬧鐘名稱"
                       FontSize="14"
                       Foreground="#CCCCCC"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox"
                     FontSize="16"
                     Padding="10"
                     Background="#2D2D2D"
                     Foreground="White"
                     BorderBrush="#555555"
                     BorderThickness="1"/>
        </StackPanel>

        <!-- 時間選擇 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="時間"
                       FontSize="14"
                       Foreground="#CCCCCC"
                       Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="HourComboBox"
                          Grid.Column="0"
                          FontSize="32"
                          Padding="10"
                          Background="#2D2D2D"
                          Foreground="#00D9FF"
                          BorderBrush="#00D9FF"
                          FontWeight="Bold"/>

                <TextBlock Grid.Column="1"
                           Text=":"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#00D9FF"
                           VerticalAlignment="Center"
                           Margin="10,0"/>

                <ComboBox x:Name="MinuteComboBox"
                          Grid.Column="2"
                          FontSize="32"
                          Padding="10"
                          Background="#2D2D2D"
                          Foreground="#00D9FF"
                          BorderBrush="#00D9FF"
                          FontWeight="Bold"/>
            </Grid>
        </StackPanel>

        <!-- 響鈴持續時間 -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="有人使用時響鈴秒數"
                       FontSize="14"
                       Foreground="#CCCCCC"
                       Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Slider x:Name="RingingDurationSlider"
                        Grid.Column="0"
                        Minimum="1"
                        Maximum="60"
                        Value="5"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"/>

                <TextBlock Grid.Column="1"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#00D9FF"
                           VerticalAlignment="Center"
                           Width="60"
                           TextAlignment="Right">
                    <Run Text="{Binding ElementName=RingingDurationSlider, Path=Value, Mode=OneWay}"/>
                    <Run Text=" 秒"/>
                </TextBlock>
            </Grid>
        </StackPanel>

        <!-- 無人使用時持續響鈴時間 -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="無人使用時持續響鈴時間 (0 = 永不停止)"
                       FontSize="14"
                       Foreground="#CCCCCC"
                       Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Slider x:Name="MaxRingingDurationSlider"
                        Grid.Column="0"
                        Minimum="0"
                        Maximum="30"
                        Value="10"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        ValueChanged="MaxRingingDurationSlider_ValueChanged"/>

                <TextBlock x:Name="MaxRingingDurationText"
                           Grid.Column="1"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#FF6347"
                           VerticalAlignment="Center"
                           Width="100"
                           TextAlignment="Right"
                           Text="10 分鐘"/>
            </Grid>
        </StackPanel>

        <!-- 音樂檔案 -->
        <StackPanel Grid.Row="5" Margin="0,0,0,15">
            <TextBlock Text="鬧鐘音樂 (選填)"
                       FontSize="14"
                       Foreground="#CCCCCC"
                       Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="MusicFileTextBox"
                         Grid.Column="0"
                         FontSize="14"
                         Padding="10"
                         Background="#2D2D2D"
                         Foreground="White"
                         BorderBrush="#555555"
                         BorderThickness="1"
                         IsReadOnly="True"
                         Text="系統預設音效"/>

                <Button Grid.Column="1"
                        x:Name="BrowseMusicButton"
                        Content="瀏覽..."
                        FontSize="14"
                        Padding="15,10"
                        Background="#007BFF"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="10,0,0,0"
                        Click="BrowseMusicButton_Click"/>
            </Grid>
        </StackPanel>

        <!-- 啟用開關 -->
        <StackPanel Grid.Row="6" Margin="0,0,0,15" Orientation="Horizontal">
            <CheckBox x:Name="IsEnabledCheckBox"
                      Content="啟用此鬧鐘"
                      FontSize="14"
                      Foreground="White"
                      IsChecked="True"
                      VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 按鈕 -->
        <Grid Grid.Row="8" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="取消"
                    FontSize="16"
                    Padding="15"
                    Background="#6C757D"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click"/>

            <Button Grid.Column="2"
                    Content="儲存"
                    FontSize="16"
                    Padding="15"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="SaveButton_Click"/>
        </Grid>
    </Grid>
</Window>
