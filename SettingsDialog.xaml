<Window x:Class="AlarmClock.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="全域設定"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0"
                   Text="⚙️ 全域設定"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#00D9FF"
                   Margin="0,0,0,20"/>

        <!-- 使用者活躍判斷時間 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="使用者活躍判斷時間 (秒)"
                       FontSize="14"
                       Foreground="#CCCCCC"
                       Margin="0,0,0,5"/>
            <TextBlock Text="設定閒置多少秒後視為使用者不活躍"
                       FontSize="12"
                       Foreground="#888888"
                       Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Slider x:Name="IdleThresholdSlider"
                        Grid.Column="0"
                        Minimum="10"
                        Maximum="300"
                        Value="30"
                        TickFrequency="10"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        ValueChanged="IdleThresholdSlider_ValueChanged"/>

                <TextBlock x:Name="IdleThresholdText"
                           Grid.Column="1"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#00D9FF"
                           VerticalAlignment="Center"
                           Width="80"
                           TextAlignment="Right"
                           Text="30 秒"/>
            </Grid>
        </StackPanel>

        <!-- 音樂資料夾路徑 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="音樂資料夾路徑"
                       FontSize="14"
                       Foreground="#CCCCCC"
                       Margin="0,0,0,5"/>
            <TextBlock Text="鬧鐘音樂檔案的預設儲存位置"
                       FontSize="12"
                       Foreground="#888888"
                       Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="MusicFolderTextBox"
                         Grid.Column="0"
                         FontSize="14"
                         Padding="10"
                         Background="#2D2D2D"
                         Foreground="White"
                         BorderBrush="#555555"
                         BorderThickness="1"
                         IsReadOnly="True"/>

                <Button Grid.Column="1"
                        x:Name="BrowseFolderButton"
                        Content="瀏覽..."
                        FontSize="14"
                        Padding="15,10"
                        Background="#007BFF"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="10,0,0,0"
                        Click="BrowseFolderButton_Click"/>
            </Grid>
        </StackPanel>

        <!-- 按鈕 -->
        <Grid Grid.Row="4" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="取消"
                    FontSize="16"
                    Padding="15"
                    Background="#6C757D"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click"/>

            <Button Grid.Column="2"
                    Content="儲存"
                    FontSize="16"
                    Padding="15"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="SaveButton_Click"/>
        </Grid>
    </Grid>
</Window>
