<Window x:Class="AlarmClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlarmClock"
        mc:Ignorable="d"
        Title="智慧鬧鐘" Height="500" Width="600"
        Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0"
                   Text="🔔 智慧鬧鐘系統"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#00D9FF"
                   Margin="0,0,0,20"/>

        <!-- 當前時間顯示 -->
        <Border Grid.Row="1"
                Background="#2D2D2D"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="目前時間"
                           FontSize="14"
                           Foreground="#888888"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="CurrentTimeText"
                           Text="00:00:00"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="#FFFFFF"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 鬧鐘列表 -->
        <Border Grid.Row="2"
                Background="#2D2D2D"
                CornerRadius="10"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 新增鬧鐘按鈕與設定按鈕 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            x:Name="AddAlarmButton"
                            Content="➕ 新增鬧鐘"
                            FontSize="14"
                            Padding="10"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            Click="AddAlarmButton_Click"/>

                    <Button Grid.Column="2"
                            x:Name="SettingsButton"
                            Content="⚙️ 設定"
                            FontSize="14"
                            Padding="10,10,10,10"
                            Background="#007BFF"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="SettingsButton_Click"/>
                </Grid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="AlarmsPanel">
                        <!-- 鬧鐘項目會動態添加到這裡 -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- 狀態欄 -->
        <Border Grid.Row="3"
                Background="#2D2D2D"
                CornerRadius="10"
                Padding="15"
                Margin="0,20,0,0">
            <StackPanel>
                <TextBlock x:Name="StatusText"
                           Text="系統就緒"
                           FontSize="14"
                           Foreground="#00FF00"
                           TextAlignment="Center"/>
                <TextBlock x:Name="UserActivityText"
                           Text="使用者狀態: 檢測中..."
                           FontSize="12"
                           Foreground="#888888"
                           Margin="0,5,0,0"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
